<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#015DA6">
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="#015DA6" />
            <corners android:radius="@dimen/button_radius_large" />
        </shape>
    </item>

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#1A92C0E4"
                android:startColor="#1A2196F3"
                android:type="linear" />
            <corners android:radius="@dimen/button_radius_large" />
        </shape>
    </item>
    <item android:drawable="@drawable/ic_find_location">
        <shape android:shape="rectangle">
            <gradient
                android:angle="90"
                android:endColor="#F44336"
                android:startColor="#1A2196F3"
                android:type="linear" />
            <corners android:radius="@dimen/button_radius_large" />
        </shape>


        </item>

</ripple>
